# VeroctaAI Enterprise Platform v2.0 - Environment Configuration

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-change-this-in-production
API_VERSION=v2.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://verocta:verocta123@localhost:5432/verocta_enterprise
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=100

# =============================================================================
# ELASTICSEARCH CONFIGURATION
# =============================================================================
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=verocta
ELASTICSEARCH_MAX_RETRIES=3

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ISSUER=verocta-enterprise
JWT_AUDIENCE=verocta-users

# =============================================================================
# OAUTH2 CONFIGURATION
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# =============================================================================
# STRIPE PAYMENT INTEGRATION
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_CURRENCY=USD
STRIPE_TAX_CALCULATION_ENABLED=true

# =============================================================================
# EMAIL SERVICE (SENDGRID)
# =============================================================================
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@verocta.ai
SENDGRID_FROM_NAME=VeroctaAI
SENDGRID_TEMPLATE_ID=d-your-template-id

# =============================================================================
# SMS SERVICE (TWILIO)
# =============================================================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# AI/ML SERVICES
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# GOOGLE SHEETS INTEGRATION
# =============================================================================
GOOGLE_SHEETS_CREDENTIALS=path/to/credentials.json
GOOGLE_SHEETS_SCOPES=https://www.googleapis.com/auth/spreadsheets

# =============================================================================
# QUICKBOOKS INTEGRATION
# =============================================================================
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret
QUICKBOOKS_SANDBOX_URL=https://sandbox-quickbooks.api.intuit.com
QUICKBOOKS_PRODUCTION_URL=https://quickbooks.api.intuit.com

# =============================================================================
# XERO INTEGRATION
# =============================================================================
XERO_CLIENT_ID=your-xero-client-id
XERO_CLIENT_SECRET=your-xero-client-secret
XERO_REDIRECT_URI=http://localhost:3000/auth/xero/callback

# =============================================================================
# FILE STORAGE (S3/MinIO)
# =============================================================================
S3_BUCKET=verocta-enterprise-files
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_REGION=us-east-1
S3_ENDPOINT_URL=https://s3.amazonaws.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://app.verocta.ai
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_BURST=100
MAX_FILE_SIZE=16777216  # 16MB
ALLOWED_FILE_TYPES=csv,xlsx,pdf

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
LOG_FORMAT=json
LOG_FILE_PATH=./logs/verocta.log

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_ML_INSIGHTS=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_BENCHMARKING=true
ENABLE_MULTI_TENANCY=true
ENABLE_AUDIT_LOGGING=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
WORKER_PROCESSES=4
WORKER_THREADS=2
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65
CLIENT_MAX_BODY_SIZE=16M

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
RELOAD=true
AUTO_RELOAD=true
DEBUG_TOOLBAR=true
PROFILING_ENABLED=false

# =============================================================================
# PRODUCTION SETTINGS (Override for production)
# =============================================================================
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# SECRET_KEY=your-production-secret-key
# DATABASE_URL=postgresql://user:pass@prod-db:5432/verocta_enterprise
# REDIS_URL=redis://prod-redis:6379/0
# SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
